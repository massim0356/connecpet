<div class="bg-w navbar navbar-expand-sm navbar-light navbar-lewagon" style="height: 70px;">
  <div class="w-100"></div>
    <div class="navbar-brand d-flex justify-content-center">
      <%= image_tag "https://res.cloudinary.com/dzwpbkn3u/image/upload/v1623041320/logo-3_w2thb5.png", alt: "logo" %>
    </div>
    <div class="collapse navbar-collapse d-flex justify-content-end align-items-end" id="navbarSupportedContent">
      <ul class="navbar-nav d-flex flex-row justify-content-center align-items-center">
        <% if user_signed_in? %>
          <li class="nav-item mr-3">
            <%= link_to users_path do %>
              <i class="fas fa-home"></i>
            <% end %>
          </li>
          <li class="nav-item mr-3">
            <%= link_to friends_path do %>
              <i class="fas fa-user-friends"></i>
              <% if current_user.requested_friends.any? %>
                <span class="notification-badge badge badge-danger"><%= current_user.requested_friends.count %></span>
              <% end %>
            <% end %>
          </li>
          <li class="dropdown m-0">
            <i class="fas fa-bars avatar dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></i>
            <div class="dropdown-menu dropdown-menu-right text-left" aria-labelledby="navbarDropdown">
              <p class="ml-2"> signed in as </br> <strong><%= current_user.email %></strong></p>
            <a class="dropdown-item"> <%= link_to "Your Profile", user_path(current_user)%></a>
            <a class="dropdown-item"> <%= link_to "Log Out", destroy_user_session_path, method: :delete %></a>
          </div>
        </li>
      <% else %>
        <%= link_to "Log In", new_user_session_path, class: "btn btn-clear" %>
        <%= link_to "or Sign Up", new_user_registration_path %>
      <% end %>
    </ul>
  </div>
</div>
