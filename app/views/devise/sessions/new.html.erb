<div class="d-flex flex-column align-items-center mt-5 pt-5">
<%= image_tag "https://res.cloudinary.com/dzwpbkn3u/image/upload/v1623041320/logo-3_w2thb5.png", alt: "logo", id: "logo-home" %>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions ml-2">
    <%= f.button :submit, "Log in", class: "btn-clear" %>
  </div>
<% end %>
</div>
<div class="text-center mt-3">
<%= render "devise/shared/links" %>
</div>
